{
    "$schema": "http://json-schema.org/schema",
    "$id": "SchematicsValueAccessor",
    "title": "Value Accessor Schema",
    "type": "object",
    "properties": {
        "name": {
            "description": "Add Value Accessors to the project.",
            "type": "string"
        },
        "path": {
            "type": "string",
            "format": "path",
            "description": "The path to create the service.",
            "visible": false
        },
        "project": {
            "type": "string",
            "description": "The name of the project.",
            "$default": {
                "$source": "projectName"
            }
        }
    },
    "required": ["name"]
}
